{
  "name": "@light-merlin-dark/aia",
  "version": "0.8.12",
  "description": "AIA - Parallel AI model consultation CLI and MCP server",
  "keywords": [
    "ai",
    "cli",
    "mcp",
    "openai",
    "anthropic",
    "llm"
  ],
  "author": "Merlin",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aia": "dist/index.js",
    "aia-mcp": "dist/mcp-server.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "bun run src/index.ts",
    "mcp-dev": "bun run src/mcp-server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && chmod +x dist/index.js dist/mcp-server.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@light-merlin-dark/tok": "^0.1.2",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "openai": "^4.52.0",
    "p-retry": "^6.2.0",
    "prompts": "^2.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/node": "^20.14.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "msw": "^2.3.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
