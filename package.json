{
  "name": "@light-merlin-dark/aia",
  "version": "0.8.20",
  "description": "AIA - Parallel AI model consultation CLI",
  "keywords": [
    "ai",
    "cli",
    "openai",
    "anthropic",
    "llm",
    "consultation"
  ],
  "author": "Merlin",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "aia": "bin/aia"
  },
  "files": [
    "bin/**/*",
    "src/**/*",
    "plugins/**/*",
    "scripts/release.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "echo 'No build needed - shipping TypeScript source'",
    "dev": "bun src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "release": "bun scripts/release.ts",
    "prepare": "chmod +x bin/aia"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@light-merlin-dark/tok": "^0.1.2",
    "@merlin/cli": "^1.0.6",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "openai": "^4.52.0",
    "p-retry": "^6.2.0",
    "prompts": "^2.4.2",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.2.16",
    "@types/node": "^20.14.0",
    "@types/prompts": "^2.4.9",
    "@types/sqlite3": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
